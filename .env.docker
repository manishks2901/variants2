# Docker Environment Configuration
# This file contains environment variables for Docker deployment

# MongoDB Configuration (Docker)
MONGODB_URL=mongodb://admin:password@mongodb:27017/video_variants?authSource=admin
MONGODB_DB_NAME=video_variants

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-north-1
S3_BUCKET_NAME=manish-variation-bucket

# Redis Configuration (Docker)
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Directory Configuration (Docker)
TEMP_DIR=/tmp/video-variants
RESULTS_DIR=/app/results

# API Configuration
PORT=8000

# AI Services Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Docker-specific settings
PYTHONPATH=/app
WORKERS=2
