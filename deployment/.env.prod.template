# Copy this to .env.prod and update with your actual values

# ===========================================
# üîí SECURITY - UPDATE THESE PASSWORDS!
# ===========================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_SECURE_MONGO_PASSWORD_123!
REDIS_PASSWORD=CHANGE_THIS_SECURE_REDIS_PASSWORD_456!
SECRET_KEY=CHANGE_THIS_32_CHAR_SECRET_KEY_789_ABCDEF1234567890

# ===========================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ===========================================
MONGODB_URL=mongodb://admin:CHANGE_THIS_SECURE_MONGO_PASSWORD_123!@mongodb:27017/video_variants?authSource=admin
MONGODB_DB_NAME=video_variants

# ===========================================
# ‚òÅÔ∏è AWS S3 CONFIGURATION - REQUIRED
# ===========================================
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_HERE
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY_HERE
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-video-processing-bucket

# ===========================================
# üîÑ REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://:CHANGE_THIS_SECURE_REDIS_PASSWORD_456!@redis:6379/0
CELERY_BROKER_URL=redis://:CHANGE_THIS_SECURE_REDIS_PASSWORD_456!@redis:6379/0
CELERY_RESULT_BACKEND=redis://:CHANGE_THIS_SECURE_REDIS_PASSWORD_456!@redis:6379/0

# ===========================================
# üìÅ DIRECTORY CONFIGURATION
# ===========================================
TEMP_DIR=/tmp/video-variants
RESULTS_DIR=/app/results

# ===========================================
# üåê API CONFIGURATION
# ===========================================
PORT=8000
ENVIRONMENT=production
DEBUG=false
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,localhost

# ===========================================
# ü§ñ AI SERVICES (OPTIONAL)
# ===========================================
# ElevenLabs for text-to-speech (optional)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Groq for AI processing (optional)
GROQ_API_KEY=your_groq_api_key_here

# ===========================================
# üìä LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# ===========================================
# ‚ö° PERFORMANCE CONFIGURATION
# ===========================================
WORKERS=4
MAX_TASKS_PER_CHILD=1000
WORKER_CONCURRENCY=4

# ===========================================
# üîß CELERY CONFIGURATION
# ===========================================
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# ===========================================
# üìà MONITORING
# ===========================================
ENABLE_MONITORING=true
HEALTH_CHECK_INTERVAL=30

# ===========================================
# üõ°Ô∏è SECURITY HEADERS
# ===========================================
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE
CORS_HEADERS=*

# ===========================================
# üìπ VIDEO PROCESSING LIMITS
# ===========================================
MAX_FILE_SIZE=500MB
MAX_PROCESSING_TIME=1800
SUPPORTED_FORMATS=mp4,avi,mov,mkv,webm

# ===========================================
# üö® ALERTS (OPTIONAL)
# ===========================================
# Slack webhook for error notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Email settings for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
ADMIN_EMAIL=admin@your-domain.com
