# Production Environment Configuration
# Copy this file to .env.prod and fill in your production values

# Database Credentials
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# MongoDB Configuration (Production)
MONGODB_URL=mongodb://admin:your_secure_mongo_password_here@mongodb:27017/video_variants?authSource=admin
MONGODB_DB_NAME=video_variants

# AWS S3 Configuration (Production)
AWS_ACCESS_KEY_ID=your_production_aws_access_key
AWS_SECRET_ACCESS_KEY=your_production_aws_secret_key
AWS_REGION=eu-north-1
S3_BUCKET_NAME=your-production-bucket-name

# Redis Configuration (Production)
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379/0
CELERY_BROKER_URL=redis://:your_secure_redis_password_here@redis:6379/0
CELERY_RESULT_BACKEND=redis://:your_secure_redis_password_here@redis:6379/0

# Directory Configuration (Production)
TEMP_DIR=/tmp/video-variants
RESULTS_DIR=/app/results

# API Configuration (Production)
PORT=8000
ENVIRONMENT=production
DEBUG=false

# AI Services Configuration (Production)
ELEVENLABS_API_KEY=your_production_elevenlabs_api_key
GROQ_API_KEY=your_production_groq_api_key

# Security Configuration
SECRET_KEY=your_super_secret_key_here_minimum_32_characters
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Logging Configuration (Production)
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Performance Configuration
WORKERS=4
MAX_TASKS_PER_CHILD=1000
WORKER_CONCURRENCY=4

# Monitoring
SENTRY_DSN=your_sentry_dsn_for_error_tracking
